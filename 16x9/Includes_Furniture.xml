            <posy>115</posy>
            <width>184</width>
            <aligny>top</aligny>
            <font>Font-Sublabel</font>
            <align>center</align>
            <textcolor>HomeBarFG</textcolor>
            <label>$VAR[Furniture_TopBar_Tile_Text]</label>
        </control>
