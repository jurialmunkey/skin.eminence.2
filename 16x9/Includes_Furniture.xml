                <posy>115</posy>
                <width>1050</width>
                <font>Font-Sublabel</font>
                <aligny>top</aligny>
                <textcolor>$VAR[Furniture_TopBar_SubLabel_Color]</textcolor>
                <label>$VAR[Furniture_TopBar_Header_SubLabel]</label>
