<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- loginscreen -->
	<backgroundcolor>Background</backgroundcolor>
	<defaultcontrol always="true">52</defaultcontrol>

	<controls>
        <!-- Background -->
        <include>Furniture_Background</include>

        <!-- Content -->
        <control type="group">
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <control type="label" id="2">
                <centerleft>50%</centerleft>
                <height>50</height>
                <top>532</top>
                <align>center</align>
                <aligny>center</aligny>
                <font>Font-LoginLabel</font>
                <width>1200</width>
                <textcolor>5fcccccc</textcolor>
                <shadowcolor>4f000000</shadowcolor>
            </control>
            <control type="fixedlist" id="52">
                <centerleft>50%</centerleft>
                <bottom>15</bottom>
                <width>1440</width>
                <focusposition>1</focusposition>
                <movement>1</movement>
                <height>480</height>
                <orientation>horizontal</orientation>
                <animation effect="slide" start="0" end="240" condition="Integer.IsEqual(Container(52).NumItems,2)">Conditional</animation>
                <itemlayout width="480" height="480">
                    <control type="group">
                        <left>bigpad</left>
                        <right>bigpad</right>
                        <top>bigpad</top>
                        <bottom>bigpad</bottom>
                        <include>Object_Background</include>
                        <control type="image">
                            <top>40</top>
                            <centerleft>50%</centerleft>
                            <width>256</width>
                            <height>256</height>
                            <texture fallback="DefaultUser.png" colordiffuse="ListLabel">$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="label">
                            <label>$INFO[ListItem.Label2]</label>
                            <left>bigpad</left>
                            <right>bigpad</right>
                            <bottom>30</bottom>
                            <height>30</height>
                            <font>Font-RSS</font>
                            <align>center</align>
                            <aligny>center</aligny>
                        </control>
                        <control type="label">
                            <label>$VAR[Item_Label]</label>
                            <font>Font-Button</font>
                            <left>bigpad</left>
                            <right>bigpad</right>
                            <bottom>70</bottom>
                            <height>30</height>
                            <aligny>center</aligny>
                            <align>center</align>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="480" height="480">
                    <control type="group">
                        <left>bigpad</left>
                        <right>bigpad</right>
                        <top>bigpad</top>
                        <bottom>bigpad</bottom>
                        <control type="image">
                            <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                            <animation effect="fade" end="70" condition="true">Conditional</animation>
                            <include>Object_Background_Shadows</include>
                        </control>
                        <control type="image">
                            <top>40</top>
                            <centerleft>50%</centerleft>
                            <width>256</width>
                            <height>256</height>
                            <texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="label">
                            <label>$INFO[ListItem.Label2]</label>
                            <left>bigpad</left>
                            <right>bigpad</right>
                            <bottom>30</bottom>
                            <height>30</height>
                            <font>Font-RSS</font>
                            <align>center</align>
                            <aligny>center</aligny>
                            <textcolor>Selected</textcolor>
                        </control>
                        <control type="label">
                            <label>$VAR[Item_Label]</label>
                            <font>Font-Button</font>
                            <left>bigpad</left>
                            <right>bigpad</right>
                            <bottom>70</bottom>
                            <height>30</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <textcolor>Selected</textcolor>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
        

	</controls>

</window>