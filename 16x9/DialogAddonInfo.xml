                            <label>[UPPERCASE][COLOR=$VAR[HighlightColor2]]$INFO[ListItem.AddonType][/COLOR][/UPPERCASE]</label>
                        </control>
                        <control type="textbox">
                            <top>pad</top>
                            <left>pad</left>
                            <right>pad</right>
                            <height max="228">auto</height>
                            <font>Font-ListInfo</font>
                            <align>left</align>
                            <label>$VAR[Label_Plot]</label>
                        </control>
                        <control type="group">
                            <left>pad</left>
                            <right>pad</right>
                            <top>-10</top>
                            <control type="grouplist">
                                <include>Info_DetailsGrouplist</include>
                                <!-- Creator -->
                                <control type="group">
                                    <height>36</height>
                                    <width>100%</width>
                                    <visible>!String.IsEmpty(ListItem.AddonCreator)</visible>
                                    <control type="label">
                                        <width>200</width>
                                        <height>36</height>
                                        <align>left</align>
                                        <font>Font-ListInfo-Small</font>
                                        <textcolor>ListLabel</textcolor>
                                        <label>21863</label>
                                        <textcolor>ListLabel</textcolor>
                                    </control>
                                    <control type="label">
                                        <left>220</left>
                                        <align>left</align>
                                        <height>36</height>
                                        <font>Font-ListInfo-Bold</font>
                                        <label>$INFO[ListItem.AddonCreator]</label>
                                        <textcolor>SubLabel</textcolor>
                                    </control>
                                </control>

                                <!-- Summary -->
                                <control type="group">
                                    <height>36</height>
                                    <width>100%</width>
                                    <visible>!String.IsEmpty(ListItem.AddonSummary)</visible>
                                    <control type="label">
                                        <width>200</width>
                                        <height>36</height>
                                        <align>left</align>
                                        <font>Font-ListInfo-Small</font>
                                        <textcolor>ListLabel</textcolor>
                                        <label>20037</label>
                                        <textcolor>ListLabel</textcolor>
                                    </control>
                                    <control type="label">
                                        <left>220</left>
                                        <align>left</align>
                                        <height>36</height>
                                        <font>Font-ListInfo-Bold</font>
                                        <label>$INFO[ListItem.AddonSummary]</label>
                                        <textcolor>SubLabel</textcolor>
                                    </control>
                                </control>

                                <!-- Studio -->
                                <control type="group">
                                    <height>36</height>
                                    <width>100%</width>
                                    <visible>!String.IsEmpty(ListItem.Studio)</visible>
                                    <control type="label">
                                        <width>200</width>
                                        <height>36</height>
                                        <align>left</align>
                                        <font>Font-ListInfo-Small</font>
                                        <textcolor>ListLabel</textcolor>
                                        <label>572</label>
                                        <textcolor>ListLabel</textcolor>
                                    </control>
                                    <control type="label">
                                        <left>220</left>
                                        <align>left</align>
                                        <height>36</height>
                                        <font>Font-ListInfo-Bold</font>
                                        <label>$INFO[ListItem.Studio]</label>
                                        <textcolor>SubLabel</textcolor>
                                    </control>
                                </control>
                            </control>
                        </control>
                    </control>
                    <control type="grouplist">
                        <bottom>74</bottom>
                        <left>-20</left>
                        <right>-20</right>
                        <height>128</height>
                        <itemgap>20</itemgap>
                        <align>center</align>
                        <orientation>horizontal</orientation>
                        <control type="group">
                            <visible>!String.IsEmpty(ListItem.AddonVersion)</visible>
                            <width>370</width>
                            <height>100%</height>
                            <control type="label">
                                <top>0</top>
                                <height>32</height>
                                <align>center</align>
                                <font>Font-ListInfo-Small</font>
                                <label>19114</label>
                            </control>
                            <control type="label">
                                <top>32</top>
                                <height>48</height>
                                <align>center</align>
                                <textcolor>SubLabel</textcolor>
                                <font>Font-InfoBox-Title</font>
                                <label>$INFO[ListItem.AddonVersion]</label>
                            </control>
                        </control>
                        <control type="group">
                            <width>370</width>
                            <height>100%</height>
                            <visible>!String.IsEmpty(ListItem.AddonStatus)</visible>
                            <control type="label">
                                <top>0</top>
                                <height>32</height>
                                <align>center</align>
                                <font>Font-ListInfo-Small</font>
                                <label>126</label>
                            </control>
                            <control type="label">
                                <top>32</top>
                                <height>48</height>
                                <align>center</align>
                                <textcolor>SubLabel</textcolor>
                                <font>Font-InfoBox-Title</font>
                                <label>$INFO[ListItem.AddonStatus]</label>
                            </control>
                        </control>

                    </control>
                    <!-- BUTTONS -->
                    <control type="grouplist" id="9000">
                        <left>bigpad</left>
                        <right>bigpad</right>
                        <bottom>30</bottom>
                        <height>64</height>
                        <align>center</align>
                        <itemgap>pad</itemgap>
                        <orientation>horizontal</orientation>
                        <onup>9601</onup>
                        <usecontrolcoords>true</usecontrolcoords>

                        <!-- Launch Addon Button -->
                        <control type="button" id="12">
                            <label>518</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(12)</visible>
                        </control>
                    

                        <!-- Configure Addon Button -->
                        <control type="button" id="9">
                            <label>24020</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(9)</visible>
                        </control>
                    

                        <!-- Update Addon Button -->
                        <control type="button" id="8">
                            <label>24069</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(8)</visible>
                        </control>

                        <!-- Auto Updates -->
                        <control type="togglebutton" id="9013">
                            <label>$LOCALIZE[21340] $LOCALIZE[351]</label>
                            <altlabel>$LOCALIZE[21340] $LOCALIZE[16041]</altlabel>
                            <usealttexture>String.Contains(Control.GetLabel(13),*)</usealttexture>
                            <onclick>SetFocus(13)</onclick>
                            <onclick>Action(Select)</onclick>
                            <onclick>SetFocus(9013)</onclick>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(13)</visible>
                        </control>

                        <!-- Install/UnInstall Addon button -->
                        <control type="button" id="6">
                            <label>24022</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(6)</visible>
                        </control>

                        <!-- Enable/Disable Addon button -->
                        <control type="button" id="7">
                            <label>24021</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(7)</visible>
                        </control>

                        <!-- View Dependencies -->
                        <control type="button" id="10">
                            <label>$LOCALIZE[39024]</label>
                            <font>Font-ListInfo-Small-Bold</font>
                            <include>Defs_OptionButton3</include>
                            <visible>Control.IsEnabled(10)</visible>
                        </control>
